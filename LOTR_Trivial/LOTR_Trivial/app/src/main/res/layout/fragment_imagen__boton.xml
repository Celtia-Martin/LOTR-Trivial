<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lotr_trivial.FragmentosPregunta.Imagen_Boton">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/pregunta_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/customfont"
            android:text="pregunta"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagenPregunta" />

        <ImageView
            android:id="@+id/imagenPregunta"
            android:layout_width="276dp"
            android:layout_height="164dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pregunta_2"
            app:layout_constraintVertical_bias="0.0">

            <Button
                android:id="@+id/respuesta3_2"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:background="@drawable/custombutton"
                android:fontFamily="@font/customfont"
                android:text="Button"
                android:textSize="20sp" />

            <Button
                android:id="@+id/respuesta1_2"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:background="@drawable/custombutton"
                android:fontFamily="@font/customfont"
                android:text="Button"
                android:textSize="20sp" />

            <Button
                android:id="@+id/respuesta2_2"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:background="@drawable/custombutton"
                android:fontFamily="@font/customfont"
                android:text="Button"
                android:textSize="20sp" />

            <Button
                android:id="@+id/respuesta4_2"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:background="@drawable/custombutton"
                android:fontFamily="@font/customfont"
                android:text="Button"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>